<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SecondForm"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar.TranslucentDecor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:gravity="center"
    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >


</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Device"
       android:textColor="@color/grey"

        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        >

    <EditText

        android:id="@+id/model"
        android:layout_width="265dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:imeOptions="actionNext"
        android:textColor="#ffffff"
        android:backgroundTint="#ffffff"
        android:hint="Model"
        android:drawableLeft="@drawable/drawableleft_smaller_devices"
        android:drawablePadding="10dp"
        android:textColorHint="#ffffff"
        />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="italic"
        android:text="OS"
        android:layout_marginTop="10sp"
        android:textColor="@color/grey"
        />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:id="@+id/radio"
        android:imeOptions="actionNext"

        >

        <RadioButton android:id="@+id/radio_android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android"
            android:drawableLeft="@drawable/drawableleft_smaller_android"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:theme="@android:style/Theme.Material"
            />
        <RadioButton android:id="@+id/radio_ios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IOS"
            android:drawableLeft="@drawable/drawableleft_smaller_apple"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/white"
            android:theme="@android:style/Theme.Material"
            />
    </RadioGroup>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/white"
        android:gravity="center_horizontal"
        >
    <EditText
        style="@android:style/Widget.Holo.Light.EditText"
        android:theme="@android:style/Theme.Holo.Light"
        android:id="@+id/problem"
        android:layout_width="264dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:maxLines="30"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:isScrollContainer="true"
        android:gravity="top|left"
        android:maxLength="2000"
        android:textColor="#ffffff"
        android:imeOptions="actionDone"
        android:background="@drawable/border"
        android:hint="Describe the problem ..."
        android:textColorHint="@color/white"
        android:padding="5sp"
        android:layout_margin="15sp"

        />
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        style="@android:style/Widget.CompoundButton.CheckBox"
        android:theme="@android:style/Theme.Material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="use current location"
        android:checked="true"

        android:textColor="@color/grey"
        android:layout_marginBottom="10sp"

        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="Send"
        android:background="@drawable/background_button"

        style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
        android:theme="@android:style/Theme.Holo.Light"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBack"
        android:layout_margin="4dp"
        android:text="Back"
        android:background="@drawable/background_button"

        style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
        android:theme="@android:style/Theme.Holo.Light"
        />

</LinearLayout>